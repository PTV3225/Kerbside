<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-login">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }, html: { class: 'needs-validation', novalidate: '' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

<div class="form-group">
            <%= f.input :first_name,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "first_name", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
          </div>

          <div class="form-group">
            <%= f.input :last_name,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "last_name", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
          </div>


          <div class="form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
          </div>

          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "new-password", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><em>(<%= @minimum_password_length %> characters minimum)</em></small>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Sign up", class: 'btn btn-primary btn-lg' %>
          </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
