<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class="form-login">
        <h2>Log in</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }, html: { class: 'needs-validation', novalidate: '' }) do |f| %>

          <div class="form-group">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
          </div>

          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: 'form-control' },
                        wrapper_html: { class: 'form-group' } %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3">
              <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-check-input' }, label_html: { class: 'form-check-label' }, wrapper: false %>
            </div>
          <% end %>

          <div class="form-group">
            <%= f.button :submit, "Log in", class: 'btn btn-primary btn-lg' %>
          </div>

        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
