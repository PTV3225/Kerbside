<div id="recycling-facts-box">
  <p id="fact-text">
“Hard rubbish” means household waste items not suitable for collection in the regular kerbside bin garbage and recyclables collections.</p>
</div>

<script>
  // JavaScript to rotate recycling facts every 10 seconds
  const facts = [
    "An Australian household throws away as much as 24kg of wooden furniture annually",
    "33 per cent of furniture waste is textiles, sofas, and armchairs",
    "Approximately 2 million households can generate as much as 48,000 tonnes of furniture waste yearly – both soft furnishings and wooden furniture.",
  ];

 let currentFactIndex = 0;
  const factText = document.getElementById("fact-text");

  function changeFact() {
    factText.style.opacity = 0; // Fade out
    setTimeout(() => {
      factText.textContent = facts[currentFactIndex];
      factText.style.opacity = 1; // Fade in
    }, 2000); // Delay for smoother fade effect

    currentFactIndex = (currentFactIndex + 1) % facts.length;
  }

  setInterval(changeFact, 10000); // Change fact every 10 seconds
</script>
