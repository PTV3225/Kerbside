<div class="container">
  <div class="row justify-content-center">
      <div class="col-md-6 form-login">
          <h2>Edit a Post</h2>
          <%= form_with(model: @post, local: true, html: { enctype: "multipart/form-data" }) do |form| %>

            <div class="form-group">
              <%= form.label :location, "Location" %>
              <%= form.text_field :location, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= form.label :description, "Description" %>
              <%= form.text_area :description, class: "form-control", rows: 3, required: true %>
            </div>

            <div class="form-group">
              <%= form.label :council_pickup_date, "Council Pickup Date" %>
              <%= form.date_field :council_pickup_date, class: "form-control", required: true %>
            </div>

            <div class="form-group">
              <%= form.label :photos, "Photos" %>
              <%= form.file_field :photos, class: "form-control-file", multiple: true %>
            </div>

            <%= form.submit "Update", class: "btn btn-primary mt-2" %>
          <% end %>
      </div>
  </div>
</div>
