<%= simple_form_for(Post.new,
      data: {
        controller: "alert",
        alert_icon_value: "warning",
        alert_title_value: "Before we continue..",
        alert_html_value: "Have you checked your local council's website for their rules and guidelines regarding hard rubbish? Not abiding by these rules may result in financial penalties. Also, please visit our Resource page for alternative recycling solutions for items that might not be kerb quality."
        confirm_button_text: "All good!",
        show_cancel_button: true,
        cancel_button_text: "Cancel",
        action: "submit->alert#initSweetalert",
        turbo: false
      }) do |form| %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 form-login">
          <h1>Post hard rubbish</h1>

          <%= form.error_notification %>
          <div class="form-inputs">
            <%= form.input :location, required: true %>
            <%= form.input :description, required: true, input_html: { rows: 3 } %>
            <%= form.input :council_pickup_date, required: true, as: :date %>
            <%= form.input :photos, as: :file, input_html: { multiple: true } %>
          </div>
          <div class="form-actions">
            <%= form.button :submit, "Submit", class: "btn btn-primary" %>
          </div>

      </div>
    </div>
  </div>

<% end %>
