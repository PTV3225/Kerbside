<div class="container">
  <div class="form-login">
    <h3 class="mb-3">Add Treasures</h3>
    <%= simple_form_for [@post, @treasure], url: post_treasures_path(@post) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs mb-3">
        <%= f.association :treasure_type, label: "Treasure Type", collection: TreasureType.all, value_method: :id, label_method: :category, prompt: "Select a type", input_html: { class: "form-control" } %>
        <%= f.input :description, label: "Description" %>
        <%= f.input :photo, label: "Include a photo", as: :file %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Add Treasures", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
