<div class="container mx-auto d-flex align-items-center">
  <h1 class="mb-4">Post Details</h1>
  <p><strong>Title:</strong> <%= @video.title %></p>
  <div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" width="900" height="500" src="<%= @video.url %>" frameborder="0" allowfullscreen></iframe>
  </div>
  <%= link_to 'Back to all videos', video_path(@video), class: "btn btn-primary" %>
</div>
